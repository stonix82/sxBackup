#!/bin/bash

. /root/Scripts/Backup/Config/sx.settings
. /root/Scripts/Backup/Config/sx.ips

Host=$1
Name=$2

SRC=$3
DST=$4

Monitoring=$2

$CMD_Sync $SRC $DST

if [[ "$?" == "0" ]]; then
    $CMD_Stat "echo -n OK > $StatusPath_Full$Monitoring"
else
    $CMD_Stat "echo -n FAIL > $StatusPath_Full$Monitoring"
fi
